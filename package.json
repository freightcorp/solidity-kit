{
  "name": "project-template",
  "version": "0.0.1",
  "description": "Basic project template",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "install": "truffle install",
    "compile": "npm run sol-lint && truffle compile",
    "coverage": "solidity-coverage",
    "lint": "eslint",
    "sol-lint": "solhint ./contracts/**/*.sol",
    "fix": "eslint --fix ./",
    "test": "npm run lint ./ && truffle test"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "5.6.1",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.14.0",
    "solhint": "1.3.0",
    "solidity-coverage": "0.5.11"
  }
}
